@model LuckyTurtles.ASP.NET.MVC.VideoTutorials.Models.ViewModels.UserSignUp
@{
    ViewBag.Title = "singUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CssScripts{
    <link href="~/custom/signUp.css" rel="stylesheet" />
}

<div class="jumbotron">
    @using (Html.BeginForm())
    {       
        <h1>Registration Form</h1>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group nameInput">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", id = "FirstName", placeholder = "First Name" })
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", id = "LastName", placeholder = "Last Name" })
            @Html.ValidationMessageFor(x => x.FirstName)
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "Email", placeholder = "Email" })
            @Html.ValidationMessageFor(x => x.Email)
            @if (ViewBag.EmailExists != null)
            {
                <p style="color:red; font-size:15px;">@ViewBag.EmailExists</p>
            }
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", id = "Username", placeholder = "Username" })
            @Html.ValidationMessageFor(x => x.Username)
            @if (ViewBag.UsernameExists != null)
            {
            <p style="color:red; font-size:15px;">@ViewBag.UsernameExists</p>
            }
        </div>
        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", id = "Password", placeholder = "Password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div class="form-group">
            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", id = "Password", placeholder = "Confirm Password" })
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>
        <div class="form-group">
            <input type="submit" value="Sign Up" class="btn btn-info SigntUpBtn" />
        </div>
    }
</div>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
